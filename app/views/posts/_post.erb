<article class="post" itemscope itemtype="http://schema.org/BlogPosting">
  <header class="post-header">
    <h1 class="post-title" itemprop="name headline">
      <a class="post-link" href="<%= post_path(post) %>"><%= markdownify(post.title) %></a>
    </h1>
    <p class="post-meta text-muted">
      <% if post.published_at %><time datetime="<%= post.published_at.iso8601 %>" itemprop="datePublished"><%= post.published_at.strftime("%B %-d, %Y") %></time><% end %>

      <% if post.tags.present? %>
        â€¢ Tagged <% post.tags do |tag| %>
          <%= tag %>
        <% end %>
      <% end %>
    </p>
  </header>

  <div class="post-content" itemprop="articleBody">
    <%= post.content %>
  </div>
</article>
