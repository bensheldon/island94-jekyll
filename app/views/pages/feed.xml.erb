<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>Island94.org</title>
    <description>A Lost and Found</description>
    <link><%= root_url %></link>
    <atom:link href="<%= feed_url(format: :xml) %>" rel="self" type="application/rss+xml"/>
    <pubDate><%= @posts.first.published_at.rfc822 %></pubDate>
    <lastBuildDate><%= Time.now.rfc822 %></lastBuildDate>
    <generator>Ruby on Rails</generator>
    <% @posts.each do |post| %>
      <item>
        <title><%= h post.title %></title>
        <description>
          <![CDATA[
          <%= h post.content %>
          ]]>
        </description>
        <link><%= post_url(post) %></link>
        <guid isPermaLink="true"><%= post_url(post) %></guid>
        <pubDate><%= post.published_at.rfc822 %></pubDate>
      </item>
    <% end %>
  </channel>
</rss>
